<h1>Listing articles</h1>

  <%= link_to 'New Article', new_article_path, class:"btn border" %>
  <table class="table-striped table-hover table-sm">
    <tr class="text-center">
      <th>Title</th>
      <th>Text</th>
      <th colspan="2">Actions</th>
    </tr>

    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td class="bg-white"><%= link_to 'Show', article_path(article), :class => "btn btn-outline-success" %></td>
        <td class="bg-white"><%= link_to 'Edit', edit_article_path(article), :class => "btn btn-outline-warning"  %></td>
        <td class="bg-white"><%= link_to 'Destroy', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-outline-danger"  %></td>
      </tr>
    <% end %>
  </table>
