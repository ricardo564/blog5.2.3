<h1>Listing articles</h1>
<div class="border p-2">
  <%= link_to 'New Article', new_article_path, class:"btn border" %>
  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th></th>
    </tr>

    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td class="btn mb-1 border "><%= link_to 'Show', article_path(article) %></td>
      </tr>
    <% end %>
  </table>
  <%= link_to 'Back', articles_path, class:"btn border"  %>
</div>
